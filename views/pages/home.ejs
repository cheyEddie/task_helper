<%- include('../templates/header'); -%>
<%- include('../templates/navbar'); -%>
	<table class="table table-hover" id="item-list">
        <thead>
            <th>To do title</th>
            <th>Begining date</th>
            <th>End date</th>
            <th>Progression</th>
            <th>Actions</th>
        </thead>
        <tbody>
            <% for (todo of todos) {%>
                <tr class="item-row">
                    <td class="modify-todo"><%=todo.title%></td>
                    <td class="modify-todo"><%=todo.begining_date.format('LL')%></td>
                    <td class="modify-todo"><%=todo.end_date.format('LL')%></td>
                    <td>
                        <div class="progress" style="height:25px;font-size: 0.7em">
                            <div class="progress-bar bg-success" style="width:<%=todo.progress%>%"><%=todo.progress%>%</div>
                        </div>
                    </td>
                    <td>
                        <a href="/todos/view/<%=todo.id%>" class="btn btn-primary view"><i class="fas fa-eye"></i> View</a>
                        <input type="hidden" value="<%=todo.id%>">
                        <button class="btn btn-danger delete"><i class="fas fa-trash"></i> Delete</button>
                    </td>
                </tr>
            <%}%>        
        </tbody>
    </table>
<%- include('../templates/footer'); -%>
